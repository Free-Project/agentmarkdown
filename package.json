{
  "name": "agentmarkdown",
  "description": "An accurate, extensible, and fast HTML-to-markdown converter.",
  "homepage": "https://github.com/activescott/agentmarkdown",
  "version": "0.0.0",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "types": "dist/es/index.d.ts",
  "files": [
    "dist/"
  ],
  "author": {
    "name": "Scott Willeke",
    "email": "scott@willeke.com",
    "url": "https://scott.willeke.com/"
  },
  "repository": "https://github.com/activescott/agentmarkdown",
  "bugs": {
    "url": "https://github.com/activescott/agentmarkdown/issues"
  },
  "license": "MPL-2.0",
  "scripts": {
    "build:cjs": "rm -rfd ./dist/cjs; tsc --project tsconfig.cjs.json",
    "build:es": "rm -rfd ./dist/es; tsc --project tsconfig.es.json",
    "build": "rm -rfd ./dist && yarn run build:es && yarn run build:cjs",
    "lint": "prettier -l \"{,!(node_modules)/**/}*.{ts,tsx,js,jsx,md,yml,json,html}\"",
    "lint-fix": "prettier --write \"{,!(node_modules)/**/}*.{ts,tsx,js,jsx,md,yml,json,html}\"",
    "test": "jest",
    "coverage": "jest --coverage && cat ./coverage/lcov.info | codacy-coverage",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@types/domhandler": "^2.4.1",
    "@types/htmlparser2": "^3.10.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.10",
    "codacy-coverage": "^3.4.0",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "2.1.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "domhandler": "^2.4.2",
    "htmlparser2": "^3.10.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
